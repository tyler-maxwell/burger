<div class="container text-center">

    <div class="row">
        <div class="col-md-12">
            <img src="assets/img/burger.png" alt="Cartoon Burger">
            <h1>Eat-Da-Burger!</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <h2>Burgers</h2>
            {{#each burgers}}
                {{#unless devoured}}
                    <div>
                        <span class="badge badge-primary">
                            {{burger_name}}
                            <button class="devour btn btn-danger" data-id="{{id}}">Devour</button>
                        </span>
                    </div>
                {{/unless}}
            {{/each}}
        </div>
        <div class="col-md-6">
            <h2>Burger History</h2>
            {{#each burgers}}
                {{#if devoured}}
                    <div>
                        <span class="badge badge-success">{{burger_name}}</span>
                    </div>   
                {{/if}}
            {{/each}}
        </div>
    </div>

    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <form class="create-form">
                <div class="form-group">
                    <textarea class="form-control" id="burger" name="burger_name" rows="3"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Add Burger</button>
            </form>
        </div>
        <div class="col-md-4"></div>
    </div>

</div>